    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/{{ cookiecutter.service_name }}/manage.py",
            "args": [
                "runserver",
                "--noreload",
                "0.0.0.0:{{cookiecutter.container_port}}"
            ],
            "django": true
        },
        {
            "name": "Python: Django Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/{{ cookiecutter.service_name }}/manage.py",
            "args": [
                "test",
            ],
            "django": true
        }
    ]
}